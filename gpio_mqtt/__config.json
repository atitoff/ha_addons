{
  "name": "GPIO / MQTT",
  "version": "0.0.1",
  "slug": "gpio-mqtt",
  "description": "Gate to GPIO module with MQTT",
  "url": "https://github.com/atitoff/ha_addons/tree/main/gpio_mqtt",
  "startup": "once",
  "boot": "auto",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "hassio_api": true,
  "hassio_role": "default",
  "options": {
    "mqttprotocol": "tls",
    "mqtthost": "core-mosquitto",
    "mqttport": 1884,
    "mqttuser": {
      "clientId": "gpio-mqtt",
      "username": "",
      "password": ""
    }
  },
  "schema": {
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)?",
    "mqttprotocol": "list(tcp|tls|ws)",
    "mqtthost": "str",
    "mqttport": "int",
    "mqttuser": {
      "clientId": "str",
      "username": "str",
      "password": "password"
    }
  }
}